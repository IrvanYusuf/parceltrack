<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Tambah Data Paket</h1>
    <a href="/admin/packages" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
            class="fas fa-arrow-left fa-sm text-white"></i> Kembali</a>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <form method="post" action="/admin/packages/store">
                    <div class="form-group">
                        <label for="nameInput">Name</label>
                        <input type="text" class="form-control" id="nameInput" aria-describedby="emailHelp" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="priceInput">Price</label>
                        <input type="number" class="form-control" id="priceInput" aria-describedby="emailHelp"
                            name="price" required>
                    </div>
                    <div class="form-group">
                        <label for="emailInput">Description</label>
                        <textarea class="form-control" id="emailInput" aria-describedby="emailHelp" name="description"
                            rows="5" required></textarea>
                    </div>
                    <div class="d-flex justify-content-end align-items-end">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>