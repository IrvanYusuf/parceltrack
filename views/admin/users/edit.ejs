<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Edit Data User</h1>
    <a href="/admin/users" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
            class="fas fa-arrow-left fa-sm text-white"></i> Kembali</a>
</div>

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="row">
            <div class="col-6">
                <form method="post" action="/admin/users/update/<%= data.formattedData.id %>?_method=put">
                    <div class="form-group">
                        <label for="nameInput">Name</label>
                        <input type="text" class="form-control" id="nameInput" aria-describedby="emailHelp" name="name"
                            value="<%= data.formattedData.name %>">
                    </div>
                    <div class="form-group">
                        <label for="emailInput">Email</label>
                        <input type="email" class="form-control" id="emailInput" aria-describedby="emailHelp"
                            name="email" value="<%= data.formattedData.email %>">
                    </div>
                    <div class="form-group">
                        <label for="noHpInput">No Hp</label>
                        <input type="text" class="form-control" id="noHpInput" aria-describedby="emailHelp" name="no_hp"
                            value="<%= data.formattedData.no_hp %>">
                    </div>
                    <div class="form-group">
                        <label for="exampleFormControlSelect1">Role</label>
                        <select class="form-control" id="roleSelect" name="role_id">
                            <% data.dataRoles.map(role=> { %>
                                <option value="<%= role.id %>" <%=data.formattedData.role_id==role.id ? 'selected' : ''
                                    %>><%= role.role %>
                                </option>
                                <% }) %>
                        </select>
                    </div>
                    <div class="d-flex justify-content-end align-items-end">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>