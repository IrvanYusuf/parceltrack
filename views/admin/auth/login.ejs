<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class="col-xl-10 col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row justify-content-center align-items-center">
                        <div class="col-lg-6 d-none d-lg-block">
                            <img src="/img/login.png" alt="" class="w-100 h-100">
                        </div>
                        <div class="col-lg-6">
                            <div class="p-5">
                                <div class="text-center">
                                    <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                </div>
                                <div class="alert alert-info" role="alert">
                                    use <strong>admin100@gmail.com</strong> with password <strong>admin100</strong>
                                </div>
                                <form method="post" action="/admin/auth/login">
                                    <div class="form-group">
                                        <label for="exampleInputEmail">Email</label>
                                        <input type="email" class="form-control <%= data.message ?  'is-invalid' :'' %>"
                                            name="email" id="exampleInputEmail" aria-describedby="emailHelp"
                                            placeholder="Email" required value="<%= data.email || '' %>">
                                        <% if (data.message) { %>
                                            <div id="emailHelp" class="invalid-feedback">
                                                <%= data.message %>
                                            </div>
                                            <% } %>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputPassword">Password</label>
                                        <div class="input-group  <%= data.password ? 'is-invalid' : '' %>">
                                            <input type="password"
                                                class="form-control <%= data.password ? 'is-invalid' : '' %>"
                                                id="exampleInputPassword" placeholder="Password"
                                                aria-describedby="passwordHelp" name="password">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text" id="togglePassword">
                                                    <i class="fas fa-eye"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <% if (data.password) { %>
                                            <div id="passwordHelp" class="invalid-feedback">
                                                <%= data.password %>
                                            </div>
                                            <% } %>
                                    </div>

                                    <button type="submit" class="btn btn-primary btn-block">
                                        Login
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

    </div>

</div>
<script>
    document.getElementById("togglePassword").addEventListener("click", function () {
        const passwordField = document.getElementById("exampleInputPassword");
        const icon = this.querySelector("i");

        if (passwordField.type === "password") {
            passwordField.type = "text";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
        } else {
            passwordField.type = "password";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
        }
    });
</script>