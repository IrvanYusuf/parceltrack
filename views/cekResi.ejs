<div class="container mx-auto row justify-content-center align-items-center" style="margin-top: 80px;">
    <div class="col-12 col-md-10">
        <div class="card shadow" style="padding-bottom: 80px;">
            <div class="card-body">
                <h3 class="text-center mb-4">Cek Resi Paket</h3>
                <div class="d-flex justify-content-end align-items-center mb-4">
                    <button class="btn btn-danger btn-sm" id="resetFilterBtn">Reset Filter</button>
                </div>
                <form action="" method="GET">
                    <label for="noResi">Nomor Resi</label>
                    <div class="input-group">
                        <input type="text" class="form-control" id="noResi" name="q" placeholder="Masukkan Nomor Resi"
                            required value="<%= data.search || '' %>">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-primary">Cek Status</button>
                        </div>
                    </div>
                </form>
                <% if (data && data.detailDataTransaction) { %>
                    <hr>
                    <% if (data.detailDataTransaction.length===0) { %>
                        <h5 class="text-center mt-5">Data Tidak Ditemukan</h5>
                        <% } else{ %>
